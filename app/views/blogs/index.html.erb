<h1>Blogs</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.user.name.truncate(14) %></td>
        <td><%= blog.content.truncate(140) %></td>
        
        <td><%= link_to 'Show', blog %></td>
        <% if blog.user == current_user %>
          <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
          <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: '本当に削除してもよろしいですか?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if logged_in? %>
<%= link_to 'New Blog', new_blog_path %>
<% end %>
